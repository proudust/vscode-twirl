{
	"private": true,
	"name": "vscode-twirl",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/proudust/vscode-twirl",
		"directory": "packages/vscode"
	},
	"categories": [
		"Programming Languages"
	],
	"displayName": "Twirl (Unofficial)",
	"description": "Play Framework Template Engine Support for Visual Studio Code",
	"author": "Proudust",
	"publisher": "Proudust",
	"engines": {
		"vscode": "^1.82.0"
	},
	"activationEvents": [
		"onLanguage:html1"
	],
	"main": "./dist/client.js",
	"contributes": {
		"languages": [
			{
				"id": "scala.html",
				"extensions": [
					".scala.html"
				],
				"aliases": [
					"Twirl (HTML)"
				]
			}
		],
		"grammars": [
			{
				"language": "scala.html",
				"scopeName": "source.scala.html",
				"path": "./syntaxes/scala.html.tmGrammar.json",
				"embeddedLanguages": {
					"text.html": "html"
				}
			}
		]
	},
	"scripts": {
		"build": "node scripts/build -- --minify",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"devDependencies": {
		"@html1/language-server": "workspace:*",
		"@types/vscode": "^1.82.0",
		"@volar/language-server": "~1.10.5",
		"@volar/vscode": "~1.10.5",
		"esbuild": "latest",
		"vsce": "latest",
		"vscode-languageclient": "^9.0.1"
	}
}
